.calendar{
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background:white;
    opacity:0;
}

/*描述视图*/
.descriptionView{
    width:100%;
    height:50%;
    position:absolute;
    bottom:0;
    left:0;
    right:0;
    display:flex;
    flex-direction: column;
    color:white;
    padding:20px;
    box-sizing:border-box;
    opacity:0;
}
.descriptionView>view {
    flex:1;
}

.dailyView {
    text-align:left;
    width:100px;
    display:flex;
    flex-direction:column;
    align-items:flex-start;
}
.daily {
    width:100%;
    text-align:center;
}
/*顶部导航条*/
.topBar{
    position:fixed;
    width:100%;
    height:64px;
    background:rgba(0,0,0,0);
    z-index:1000;
    opacity:0;
}
.statuBar{
    height:20px;
    width:100%;
}


@media  screen and (min-height:812px) and (max-height:1000px){
    .topBar {
        height:84px;
    }
    .statuBar{
        height:40px;
    }
}

.descriptionView-transition,.topBar-transition {
    transition: all 2s;
}

.descriptionView-show,.topBar-show{
    opacity:1
}

.navBar {
    width:100%;
    height: 44px;
    display:flex;
}
.navBar>view{
    flex:1;
    text-align:left;
    display:flex;
    align-items:center;
}

.CancelText {
    padding-left:20px;
    box-sizing:border-box;
    color:white;
}
.calendarIcon{
    justify-content:center;
    align-items:center;
}